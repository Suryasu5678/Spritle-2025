    cards.map((card, index) => (
      <div
        key={index}
        class="bg-[#2E2E2E] border border-[#1F1F1F] rounded-[20px]  w-full max-w-[850px] max-h-[264px] h-screen flex flex-col justify-center space-y-3  md:space-y-6 p-3  md:p-10 "
