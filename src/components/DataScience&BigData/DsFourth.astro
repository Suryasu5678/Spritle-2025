// index.astro or your desired page
import SuccessStories from "@/components/DynamicProps/SuccessStories.astro";

const cardData = [
  {
    image: "/assets/succ5.svg",
    heading: "Agriculture – AI-Powered Crop Monitoring",
    description:
      "Developed a big data solution for precision agriculture, analyzing soil health and weather patterns to optimize crop yield, increasing productivity by 25%",
  },
  {
    image: "/assets/succ6.svg",
    heading: "Energy – Predictive Analytics for Power Grid Efficiency",
    description:
      "Implemented machine learning models to predict energy demand and prevent outages for a utility company, reducing downtime by 20%",
  },
  {
    image: "/assets/succ7.svg",
    heading: "Logistics – Route Optimization for Fleet Management",
    description:
      "Built a real-time route optimization system using data analytics for a logistics firm, reducing fuel costs by 15% and improving delivery efficiency",
  },
  {
    image: "/assets/succ8.svg",
    heading: "Telecommunications – Churn Prediction",
