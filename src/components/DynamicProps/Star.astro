---
// DynamicList.astro
const { items } = Astro.props;
---

<div class=" py-3 md:py-8  ">
  {
    items.map((item, index) => (
      <div key={index} class="flex mb-0 md:mb-12 max-w-[1212px] py-2">
        <div class="mr-4 min-h-10 min-w-10 md:min-h-20 md:min-w-20 "> 
          <img
            src="/assets/star.svg"
            alt="Logo"
            class=" mt-3 h-full  w-full md:mt-0"
          />
        </div>
        <div class="mt-3">
          <h4 class="font-medium font-primary text-subbody">
            {item.title}
            <span class="md:text-[28px] text-base font-medium text-secondary">
              {" "}:{" "}{item.description}
            </span>
          </h4>
        </div>
      </div>
    ))
  }
</div>
