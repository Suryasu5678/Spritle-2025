---

// Destructure props
const { title, description, challenges } = Astro.props;
---

<div class="py-8 mt-10 md:mt-20 lg:mt-20 xl:mt-30">
  <div class="container px-5 md:px-0 md:flex gap-5 items-center justify-between">
    <div class="">
      <h2 class="lg:text-7xl text-3xl font-semibold mb-6 text-primary">
        {title}
      </h2>
      <p class="font-normal lg:text-3xl text-xl text-secondary leading-normal mt-8 mb-10">
        {description}
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      {challenges.map((challenge, index) => (
        <div
          key={index}
          class="flex flex-col  items-start justify-between border-2 border-primary p-4 px-6 rounded-lg shadow-lg bg-[#313131] h-full max-w-6xl"
        >
          <img
            src={challenge.image}
            alt={challenge.title}
            class="max-w-[47px] max-h-[42px]"
            width="47"
            height="42"
            loading="lazy"
          />
          <h2 class="text-primary text-title-body font-medium py-3 max-w-[293px]">
            {challenge.title}
          </h2>
          <hr class="w-full border-t-2 border-btnprimary" />
          <p class="text-secondary font-normal text-body py-5 flex-1">
            {challenge.description}
          </p>
        </div>
      ))}
    </div>
  </div>
</div>