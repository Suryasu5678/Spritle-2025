---
// Destructure props
const { title, description, challenges } = Astro.props;
---

<div class="py-8 mt-10 md:mt-20 lg:mt-20 xl:mt-30">
  <div class="container px-5 md:px-0 md:flex items-center justify-around gap-10">
    <div class="max-w-[400px]">
      <h2 class="lg:text-7xl text-3xl font-semibold mb-6 text-primary">
        {title}
      </h2>
      <p
        class="font-normal lg:text-3xl text-3xl text-secondary leading-normal mt-8 mb-10"
      >
        {description}
      </p>
    </div>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 max-w-[900px]">
      {
        challenges.map((challenge, index) => (
          <div
            key={index}
            class="flex flex-col flex-wrap  border-2 border-primary p-4 px-6 rounded-lg shadow-lg bg-[#313131] h-full min-h-[215px]"
          >
            <img
              src={challenge.image}
              alt={challenge.title}
              class="max-w-[47px] max-h-[42px] mb-3"
              width="47"
              height="42"
              loading="lazy"
            />
            <h2 class="text-primary text-title-body font-medium py-3 mt-2">
              {challenge.title}
            </h2>
          </div>
        ))
      }
    </div>
  </div>
</div>
