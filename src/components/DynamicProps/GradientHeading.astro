---
interface Props {
  text: string;
  maxWidth?: string;
}
const { text, maxWidth } = Astro.props;
---

<h1
  class={`font-dmSans font-normal inline-block text-title bg-gradient-to-t from-white to-[rgba(255,255,255,0.3)] bg-clip-text text-transparent xl:leading-[118px] ${
    maxWidth ? maxWidth : "max-w-[1411px]"
  }`}
>
  {text}
</h1>
 