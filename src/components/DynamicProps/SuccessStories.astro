---
// CustomerCard.astro
const { image, heading, description } = Astro.props;
---

<div
  class="rounded-lg border-2 border-gray-300 p-2 md:p-6 gap-5 flex flex-col h-full w-full"
>
  <div class="h-[21.8125rem]">
    <img
      src={image}
      alt="Customer Image"
      class="w-full rounded-lg object-cover h-full"
    />
  </div>
  <div class="w-full gap-4 flex flex-col">
    <h2 class="font-medium text-subtitle text-primary h-18 lg:h-25 xl:h-16">
      {heading}
    </h2>
    <p class="text-[#B0B0B0] font-medium text-subheading">
      {description}
    </p>
  </div>
</div>
