---
// CustomerCard.astro
const { image, heading, description } = Astro.props;
---

<div
  class="rounded-lg border-2 border-gray-300 p-2 md:p-6 gap-5 flex flex-col overflow-hidden overflow-ellipsis"
  
>
  <img
    src={image}
    alt="Customer Image"
    class="w-full h-[300px] rounded-lg object-cover"
  />
  <div class="w-full  gap-4 flex flex-col">
    <h2 class="font-medium text-subtitle text-primary">
      {heading}
    </h2>
    <p class="text-[#B0B0B0] font-medium text-subheading">
      {description}
    </p>
  </div>
</div>
