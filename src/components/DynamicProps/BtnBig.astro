---
const { text = "Click Me", class: customClass = "", icon = "" } = Astro.props;
const defaultClass =
  " btnprimary   px-8  py-2  text-subheading ";
---

<button class={`${defaultClass} ${customClass}`}>
  {text}
  {icon && <img src={icon} alt="icon" class="w-4 h-4 md:w-5 md:h-5 lg:w-4 lg:h-4" />}
</button>
