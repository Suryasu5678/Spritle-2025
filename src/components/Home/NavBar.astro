<style>
    /* Custom styles for mobile navigation */
    #mobile-nav {
        transform: translateX(0);
        opacity: 1;
        visibility: visible;
        z-index: 50;
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        pointer-events: none;
    }

    /* Glass effect for mobile menu */
    .mobile-menu-glass {
        background-color: #303235;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        /* Initial clip-path - starts as a small rectangle where the hamburger is */
        clip-path: polygon(81.05% 9.1%, 92% 9.1%, 92% 10.1%, 81.05% 10.1%);
        transition:
            clip-path 400ms cubic-bezier(0.4, 0, 0.2, 1),
            background-color 400ms cubic-bezier(0.4, 0, 0.2, 1);
        position: absolute;
        top: 0;
    }

    /* Active clip-path state - expands to cover the whole screen */
    #mobile-nav.active {
        pointer-events: auto;
    }

    #mobile-nav.active .mobile-menu-glass {
        clip-path: polygon(101% -1%, 101% 101%, -1% 101%, -1% -1%);
    }

    /* Menu options animation */
    .menu-options {
        align-items: center;
        display: flex;
        flex-direction: column;
        margin-top: 60px;
        transform: scale(0.8);
        transition: transform 400ms cubic-bezier(0.4, 0, 0.2, 1);
    }

    #mobile-nav.active .menu-options {
        transform: scale(1);
    }

    /* Menu link styling */
    .menu-link {
        cursor: pointer;
        margin: 8px 0;
        color: #f2f2f2;
    }

    .menu-link.selected {
        color: #a02f56;
    }

    /* Hamburger icon animation */
    .hamburger {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 4px;
        cursor: pointer;
        z-index: 100;
        position: relative;
    }

    .hamburger .bar {
        width: 24px;
        height: 2px;
        background-color: white;
        transition: transform 400ms cubic-bezier(0.4, 0, 0.2, 1);
    }

    .hamburger .bar1 {
        transform-origin: 12px 1px;
    }

    .hamburger .bar2 {
        transform-origin: 12px 1px;
    }

    .hamburger.active .bar1 {
        transform: translateY(7.2px) rotate(45deg);
    }

    .hamburger.active .bar2 {
        transform: rotate(-45deg);
    }

    .hamburger .bar3 {
        opacity: 1;
        transition: opacity 300ms ease-in-out;
    }

    .hamburger.active .bar3 {
        opacity: 0;
    }

    /* Sticky navbar */
    .sticky-nav {
        position: sticky;
        top: 0;
        z-index: 100;
        background: rgba(37, 37, 37, 0.7);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: rgb(237, 237, 237);
    }
</style>

<!-- Sticky Navbar -->
<div class="sticky-nav flex items-center justify-between px-6 py-2 h-[100px]">
