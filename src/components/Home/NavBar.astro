        font-family: Arial, sans-serif;
      }

      body {
        background-color: #1a1a1a;
        color: #f2f2f2;
      }

      a {
        text-decoration: none;
        color: inherit;
      }

      /* Flex utilities */
      .flex {
        display: flex;
      }
      .items-center {
        align-items: center;
      }
      .justify-between {
        justify-content: space-between;
      }
      .hidden {
        display: none;
      }
      .md\:flex {
        display: none;
      }
      .md\:gap-4 {
        gap: 1rem;
      }
      .lg\:gap-8 {
        gap: 2rem;
      }
      .lg\:h-11 {
        height: 2.75rem;
      }
      .h-8 {
        height: 2rem;
      }
      .px-6 {
        padding-left: 1.5rem;
        padding-right: 1.5rem;
      }
      .py-2 {
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
      }
      .h-\[100px\] {
        height: 100px;
      }

      @media (min-width: 768px) {
        .md\:flex {
          display: flex;
        }
        .md\:hidden {
          display: none;
        }
      }

      /* Custom styles for mobile navigation */
      #mobile-nav {
        transform: translateX(0);
        opacity: 1;
        visibility: visible;
        z-index: 50;
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        pointer-events: none;
      }

      /* Glass effect for mobile menu */
      .mobile-menu-glass {
        background-color: #303235;
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        /* Initial clip-path - starts as a small rectangle where the hamburger is */
        clip-path: polygon(81.05% 9.1%, 92% 9.1%, 92% 10.1%, 81.05% 10.1%);
        transition:
          clip-path 400ms cubic-bezier(0.4, 0, 0.2, 1),
          background-color 400ms cubic-bezier(0.4, 0, 0.2, 1);
        position: absolute;
        top: 0;
        overflow-y: auto;
      }

      /* Active clip-path state - expands to cover the whole screen */
      #mobile-nav.active {
        pointer-events: auto;
      }

      #mobile-nav.active .mobile-menu-glass {
        clip-path: polygon(101% -1%, 101% 101%, -1% 101%, -1% -1%);
      }

      /* Menu options animation */
      .menu-options {
        align-items: center;
        display: flex;
        flex-direction: column;
        width: 100%;
        margin-top: 90px;
        transform: scale(0.8);
        transition: transform 400ms cubic-bezier(0.4, 0, 0.2, 1);
      }

      #mobile-nav.active .menu-options {
        transform: scale(1);
      }

      /* Menu link styling */
      .menu-link {
        cursor: pointer;
        margin: 8px 0;
        color: #f2f2f2;
        text-decoration: none;
        font-size: 1.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        width: 80%;
        padding: 10px 15px;
        border-radius: 8px;
        transition: background-color 0.3s;
      }

      .menu-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
      }

      .menu-link.selected {
        color: #a02f56;
      }

      /* Mobile dropdown menu styling */
      .mobile-dropdown {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: #303235;
        z-index: 60;
        display: none;
        flex-direction: column;
        padding: 20px;
        overflow-y: auto;
        margin-top: 90px;
      }

      .mobile-dropdown.active {
        display: flex;
      }

      .mobile-dropdown-header {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
        padding-bottom: 10px;
        border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      }

      .back-button {
        display: flex;
        align-items: center;
        color: #f2f2f2;
        font-size: 1.2rem;
        margin-right: 15px;
        cursor: pointer;
      }

      .mobile-dropdown-title {
        font-size: 1.5rem;
        font-weight: 600;
        color: #f2f2f2;
      }

      .mobile-dropdown-section {
        margin-bottom: 25px;
      }

      .mobile-dropdown-section-title {
        font-size: 14px;
        font-weight: 600;
        color: #eeeeee;
        margin-bottom: 10px;
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }

      .mobile-dropdown-link {
        display: block;
        font-size: 1.2rem;
        color: rgba(242, 242, 242, 0.8);
        padding: 12px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.05);
      }

      .mobile-dropdown-link:last-child {
        border-bottom: none;
      }

      .mobile-link-description {
        display: block;
        font-size: 0.9rem;
        color: rgba(255, 255, 255, 0.5);
        margin-top: 4px;
      }

      /* Chevron for dropdown indicators */
      .chevron-right {
        width: 12px;
        height: 12px;
        border-right: 2px solid #f2f2f2;
        border-bottom: 2px solid #f2f2f2;
        transform: rotate(-45deg);
        margin-left: 10px;
      }

      .chevron-left {
        width: 12px;
        height: 12px;
        border-left: 2px solid #f2f2f2;
        border-bottom: 2px solid #f2f2f2;
        transform: rotate(45deg);
        margin-right: 10px;
      }

      /* Hamburger icon animation */
      .hamburger {
        display: flex;
        flex-direction: column;
        justify-content: center;
        gap: 4px;
        cursor: pointer;
        z-index: 100;
        position: relative;
      }

      .hamburger .bar {
        width: 24px;
        height: 2px;
        background-color: white;
        transition: transform 400ms cubic-bezier(0.4, 0, 0.2, 1);
      }

      .hamburger .bar1 {
        transform-origin: 12px 1px;
      }

      .hamburger .bar2 {
        transform-origin: 12px 1px;
      }

      .hamburger.active .bar1 {
        transform: translateY(7.2px) rotate(45deg);
      }

      .hamburger.active .bar2 {
        transform: rotate(-45deg);
      }

      .hamburger .bar3 {
        opacity: 1;
        transition: opacity 300ms ease-in-out;
      }

      .hamburger.active .bar3 {
        opacity: 0;
      }

      /* Sticky navbar */
      .sticky-nav {
        position: sticky;
        top: 0;
        z-index: 100;
        background: rgba(37, 37, 37, 0.7);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        color: rgb(237, 237, 237);
      }

      /* Desktop Navigation Dropdown - Updated to match Liveblocks style */
      .nav-item {
        position: relative;
        z-index: 1;
      }
      .nav-item:not(:hover) .dropdown {
        display: none;
        opacity: 0;
      }
      /* Dropdown container */
      .dropdown {
        display: none;
        position: absolute;
        top: 100%;
        left: 50%;
        transform: translateX(-50%);
        background-color: #111111;
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 8px;
        padding: 20px;
        z-index: 100;
        min-width: 280px;
        opacity: 0;
        transition:
          opacity 300ms ease-in-out,
          transform 300ms ease-in-out;
        transform-origin: top center;
        transform: translateX(-50%) translateY(10px);
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        min-width: 400px;
      }

      /* Two-column dropdown layout */
      .dropdown-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 20px;
        min-width: 500px;
      }

      .nav-item:hover .dropdown {
        display: block;
        opacity: 1;
        transform: translateX(-50%) translateY(0);
      }

      /* Dropdown section styling */
      .dropdown-section {
        margin-bottom: 20px;
      }

      .dropdown-section-title {
