        text-decoration: none;
        transition: color 0.8s ease;
      }

      .nav-item a:hover::after {
        transform: scaleX(1);
        transform-origin: bottom left;
        text-decoration: none;
      }

      .nav-item a:hover {
        color: rgba(242, 242, 242, 1); /* Full opacity on hover */
      }
      .nav-item:hover a,
