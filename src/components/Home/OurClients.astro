  .clients-marquee-right {
    animation: marqueeRight 40s linear infinite;
  }
  @keyframes marqueeLeft {
    0% {
      left: 0;
      transform: translateX(0);
    }
    100% {
      left: -100%;
      transform: translateX(calc(-100% - var(--gap)));
    }
  }
  @keyframes marqueeRight {
    0% {
      left: -100%;
      transform: translateX(0);
