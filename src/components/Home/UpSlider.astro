---

<div
  class="w-full flex justify-center items-center overflow-hidden rounded-2xl p-5"
>
  <div
    id="upSliderWrapper"
    class="md:w-[90%] h-[80vh] lg:w-full flex flex-col snap-y snap-mandatory overflow-y-scroll xl:h-[80vh] scroll-smooth relative"
    style={{ scrollbarWidth: "none", msOverflowStyle: "none" }}
  >
    {
      UpSliderData.map((slide, index) => (
        <div
          id={`slide-${index}`}
          class="upSliderSlide flex max-lg:flex-col lg:flex-row-reverse w-full h-[80vh] flex-shrink-0 items-center justify-between px-6 lg:px-10 bg-black rounded-lg overflow-hidden gap-[52px] opacity-0 scale-90 transition-transform duration-700 ease-in-out "
        >
          <div class="max-lg:w-full max-lg:order-1 w-1/2 flex justify-center relative">
            <img
              src={slide.image}
              alt="Map"
              class="max-lg:p-3 md:p-5 lg:p-0 max-lg:h-[40vh] h-[20vh] md:h-[35vh] lg:h-[469px] lg:w-[750px] w-full rounded-lg shadow-lg object-contain object-center"
            />
          </div>
          <div class="max-lg:w-full max-lg:order-2 max-lg:pt-8 w-1/2 space-y-10 ml-10">
            <h2 class="text-l lg:text-[36px] font-stretch-30% text-white">
              {slide.title}
            </h2>
            <p class="text-gray-300 text-[10px] md:text-[15px] lg:text-[24px]">
              {slide.description}
            </p>
            <p class="text-gray-300 text-sm lg:text-lg">{slide.p}</p>
            <div class="flex flex-wrap gap-3 justify-center lg:justify-start">
              {slide.logos.map((logo) => (
                <img
                  src={logo}
                  alt="Logo"
                  class="w-14 h-auto lg:w-16 bg-white rounded-lg object-contain"
                />
              ))}
            </div>
          </div>
        </div>
      ))
    }
  </div>
</div>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const slides = document.querySelectorAll(".upSliderSlide");

    // Set initial z-index for proper stacking
    slides.forEach((slide, index) => {
      slide.style.position = "sticky";
      slide.style.top = "0";
      slide.style.zIndex = "1"; // Default behind others
    });

    const observerOptions = {
      root: null,
      rootMargin: "0px",
      threshold: 0.8,
    };

    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        const slide = entry.target;
        if (entry.isIntersecting) {
          slide.style.opacity = "1";
          slide.style.transform = "scale(1)";
          slide.style.zIndex = "10"; // Bring the current slide on top
        } else {
          slide.style.opacity = "0";
          slide.style.transform = "scale(0.9)";
          slide.style.zIndex = "1"; // Push other slides behind
        }
      });
    }, observerOptions);

    slides.forEach((slide) => {
      observer.observe(slide);
    });
  });
</script>

<style>
  .upSliderSlide {
    opacity: 0;
    transform: scale(0.9);
    transition:
      opacity 0.7s ease-out,
      transform 0.7s ease-in-out;
    position: sticky;
    top: 0;
    will-change: transform, opacity;
    z-index: 1;
  }

  /* Ensure first slide is visible initially */
  .upSliderSlide:first-child {
    opacity: 1;
    transform: scale(1);
  }
</style>
