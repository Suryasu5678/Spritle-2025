    logos: [
      "../assets/nestlelogo.png",
      "../assets/hyundailogo.png",
      "../assets/stengglogo.png",
      "../assets/panasoniclogo.png",
      "../assets/c2.png",
      "../assets/standfordlogo.png",
    ],
  },
  {
