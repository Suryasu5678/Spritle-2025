---
import GradientHeading from "@/components/DynamicProps/GradientHeading.astro";
---

<div
  class="flex flex-col justify-center items-center text-center h-screen md:max-h-[666px] max-h-[500px] px-4 space-y-5 bg-[#313131] my-10 md:my-20"
>
  <GradientHeading
    text="Transform Your Factory Floor with Spritle"
    maxWidth="1200px"
  />
  <p class="font-normal mt-4 text-subbody text-p rimary max-w-[900px]">
    Partner with us to unlock the full potential of smart manufacturing
    solutions
  </p>
  <button class="mt-6 btnprimary text-subheading px-7 py-2">
    <img
      src="/assets/btnstar.svg"
      alt="Right Arrow"
      class="w-4 h-4 md:w-5 md:h-5 lg:w-6 lg:h-6"
    />
